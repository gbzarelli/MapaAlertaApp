<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/cinza_claro"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imv_map"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/sem_mapa" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imv_manage"
            android:layout_alignTop="@+id/imv_manage"
            android:layout_toEndOf="@+id/imv_map"

            android:layout_toLeftOf="@+id/imv_manage"
            android:layout_toRightOf="@+id/imv_map"

            android:layout_toStartOf="@+id/imv_manage"
            android:ellipsize="end"

            android:gravity="center_vertical"

            android:lines="1"
            android:text="@string/sample_text"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_toEndOf="@+id/imv_map"
            android:layout_toRightOf="@+id/imv_map"
            android:ellipsize="end"
            android:gravity="center_vertical"

            android:lines="1"
            android:text="@string/sample_text"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearance" />


        <ImageView
            android:id="@+id/imv_manage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/wrench" />


    </RelativeLayout>

</android.support.v7.widget.CardView>