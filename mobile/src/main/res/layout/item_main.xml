<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/cinza_claro"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imv_manage"
            android:layout_alignTop="@+id/imv_manage"
            android:layout_toLeftOf="@+id/imv_manage"
            android:layout_toStartOf="@+id/imv_manage"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="Rota Aaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="1 Km"
            android:textAppearance="?android:attr/textAppearance" />


        <ImageView
            android:id="@+id/imv_manage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            android:src="@android:drawable/ic_menu_manage" />


    </RelativeLayout>

</android.support.v7.widget.CardView>